<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.indrian.moviecatalogue">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <permission android:name="io.indrian.moviecatalogue.READ_DATABASE" android:protectionLevel="normal" />
    <permission android:name="io.indrian.moviecatalogue.WRITE_DATABASE" android:protectionLevel="normal" />

    <application
        android:name=".MovieApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <provider
            android:name=".provider.MovieFavoriteContentProvider"
            android:authorities="io.indrian.moviecatalogue"
            android:enabled="true"
            android:exported="true"
            android:readPermission="io.indrian.moviecatalogue.READ_DATABASE"
            android:writePermission="io.indrian.moviecatalogue.WRITE_DATABASE"/>

        <service
            android:name=".widget.favoritemovie.MovieStackWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver android:name=".widget.favoritemovie.FavoriteMovieWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/favorite_movie_widget_info" />
        </receiver>

        <activity android:name=".ui.search.SearchActivity" />
        <activity android:name=".ui.favorite.FavoriteActivity" />
        <activity android:name=".ui.settings.SettingsActivity" />
        <activity android:name=".ui.tvshowdetail.TVShowDetailActivity" />
        <activity android:name=".ui.moviedetail.MovieDetailActivity" />
        <activity
            android:name=".ui.main.MainActivity"
            android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>